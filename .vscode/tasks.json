{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "bootimage",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
		{
			"type": "shell",
			"label": "Run QEMU",
			"dependsOn": [
				"rust: cargo build",
				"rust: cargo bootimage"
			],
			"command": "qemu-system-x86_64 -drive format=raw,file=target/x86_64/debug/bootimage-nocciolo.bin"
		}
